 <%= form_with(model: [student, note], remote: true) do |f| %>
    <%= hidden_field_tag :subject_id, subject.id %>
    <div class="d-flex align-items-center justify-content-between">
      <%= f.text_field :content, as: :string, input_html: { class: 'form-control m-0' }, wrapper_html: { class: 'm-0' }, placeholder: 'Type here...', label: false, disabled: true %>
      <%= f.submit 'Submit', disabled: true, class:'btn btn-sammi notes-button'%>
    </div>
  <% end %>
