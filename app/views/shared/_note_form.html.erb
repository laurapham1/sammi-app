 <%= simple_form_for([student, note], remote: true) do |f| %>
    <%= hidden_field_tag :subject_id, subject.id %>
    <div class="d-flex align-items-center justify-content-between">
      <%= f.input :content, as: :string, input_html: { class: 'form-control m-0' }, wrapper_html: { class: 'm-0' }, placeholder: 'Type here...', label: false %>
      <%= f.submit 'Submit', class:'btn btn-sammi notes-button' %>
    </div>
  <% end %>
